        <Border Grid.Row="2" Grid.Column="0" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="242" Height="154" Background="#1A2026" CornerRadius="10"/>
        <Border Grid.Row="2" Grid.Column="1" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="242" Height="154" Background="#1A2026" CornerRadius="10"/>
        <Border Grid.Row="2" Grid.Column="2" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="242" Height="154" Background="#1A2026" CornerRadius="10"/>
